<Page x:Class="Exam3Bakaev.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam3Bakaev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP" Background="White">

    <Grid>
        <StackPanel Height="200" Width="200">
            <TextBlock Text="Login" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding login}"/>
            <TextBlock Margin="10" Text="Password" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding password}"/>
            <Button Content="LogIn" Name="LogBT" Margin="0,20,0,0" Click="LogBT_Click"/>
        </StackPanel>
    </Grid>
</Page>
